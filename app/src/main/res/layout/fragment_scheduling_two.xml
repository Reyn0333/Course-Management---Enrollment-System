<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admindashboard.Scheduling_two">

    <!-- Scrollable content section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"> <!-- Ensure this is below the fixed header -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="Section"
                android:textSize="20sp" />

            <EditText
                android:layout_width="550dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/custom_edit_text"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="550dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/custom_edit_text"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp" />

            <EditText
                android:layout_width="550dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/custom_edit_text"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="550dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/custom_edit_text"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="550dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/custom_edit_text"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="550dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/custom_edit_text"/>


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructor"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp" />

            <EditText
                android:layout_width="550dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/custom_edit_text"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Units"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp" />

            <EditText
                android:layout_width="550dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/custom_edit_text"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="550dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:background="@drawable/custom_edit_text"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="1050dp"
        android:layout_marginTop="700dp"
        android:background="@drawable/cont"
        android:onClick="Savebtn"
        android:text="Save"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="850dp"
        android:layout_marginTop="700dp"
        android:background="@drawable/back"
        android:text="Back"
        android:textColor="@color/violet"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</FrameLayout>
